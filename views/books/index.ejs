<h2>Search Books</h2>
<form action="/books" method="get">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= searchOptions.title%>"
    />
  </div>
  <div>
    <label for="pa">Published After</label>
    <input
      type="date"
      name="publishedAfter"
      id="pa"
      value="<%= searchOptions.publishedAfter%>"
    />
  </div>
  <div>
    <label for="pb">Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      id="pb"
      value="<%= searchOptions.publishedBefore%>"
    />
  </div>
  <button type="submit">Search</button>
</form>
<br />

<div>
  <% books.forEach(book => { %>

  <img height="150" width="100" alt="" src="<%= book.coverImagePath %>" />
  <% }) %>
</div>
