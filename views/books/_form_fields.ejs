<div>
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="<%= book.title %>" />
</div>
<div>
  <label for="authors">Author</label>
  <select name="author" id="authors">
    <% authors.forEach(author => { %> <% if(author.id===book.author) { %>
    <option
      selected
      label="<%= author.name%>"
      value="<%= author.id %>"
    ></option>
    <% } else {%>
    <option label="<%= author.name%>" value="<%= author.id %>"></option>
    <% }%> <% }); %>
  </select>
</div>

<div>
  <label for="date">Publish Date</label>
  <input type="date" name="publishDate" id="date" value
  ="<%=book.publishDate==null?"":book.publishDate.toISOString().split('T')[0]
  %>" />
</div>

<div>
  <label for="pc">Page Count</label>
  <input
    type="number"
    name="pageCount"
    id="pc"
    min="1"
    value="<%= book.pageCount %>"
  />
</div>
<div>
  <label for="ci">Cover</label>
  <input type="file" name="cover" id="ci" />
</div>
<div>
  <label for="des">Description</label>
  <textarea name="description" id="des"><%= book.description%></textarea>
</div>
